{% extends 'partials/base.html.twig' %}
{% set show_breadcrumbs = header_var('show_breadcrumbs', [page, blog])|defined(true) %}

{% block styles %}
<style>
.events-homepage
{
    padding-top: 0;
}
.events-homepage header h2
{
    background-color: blue;
    border-radius: 0 0 1rem 1rem;
    padding: 3rem;
    text-align: left;
    font-size: 2.5rem;
    margin: 0;
    color: white;
}
.events-homepage > .container > p
{
    margin-left: 1.25rem;
    margin-bottom: 2.5rem;
    color: #646c81;
}
.events-homepage h3
{
  font-family: Lato;
  font-size: 1.25rem;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: 1.2;
  letter-spacing: normal;
  text-align: center;
  color: #edf8fb;

  background-color: #5b72b7;
  border-radius: .25rem;

  display: inline-block;
  padding: .5rem 1rem;
}
</style>
{% endblock %}

{% block content %}

<section class="events-homepage">
    <div class="container">
        <header>
            <div class="header-title">
                <h2>{{page.title}}</h2>
            </div>

        {% if show_breadcrumbs and config.plugins.breadcrumbs.enabled %}
            {% include 'partials/breadcrumbs.html.twig' %}
        {% endif %}
        </header>
        
        {{ page.content|raw }}
        
        <h3>
            Upcoming Events
        </h3>
    </div>
</section>

{% endblock %}