{% extends 'partials/base.html.twig' %}
{% set show_breadcrumbs = header_var('show_breadcrumbs', [page, blog])|defined(true) %}

{% block styles %}
<style>
.events-homepage
{
    padding-top: 0;
}
.events-homepage header h2
{
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    background-image: url({{url('theme://assets/img/cadreEvent-Header-BgImg.jpg')}});

    border-radius: 0 0 1rem 1rem;
    padding: 3rem;
    text-align: left;
    font-size: 2.5rem;
    margin: 0;
    color: white;
}
.events-homepage > .container > p
{
    margin-left: 1.25rem;
    margin-bottom: 2.5rem;
    color: #646c81;
}
.events-homepage h3
{
  font-family: Lato;
  font-size: 1.25rem;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: 1.2;
  letter-spacing: normal;
  text-align: center;
  color: #edf8fb;

  background-color: #5b72b7;
  border-radius: .25rem;

  display: inline-block;
  padding: .5rem 1rem;
  margin-bototm: 1rem;
}

.events-homepage .event-card-content
{
    padding: 1rem 1.25rem;
}

.events-homepage .event-card-image img
{
    {# visibility: hidden; #}
    display: none;
}

.event-card-image
{
    border-top-right-radius: 1rem;
    border-bottom-right-radius: 1rem;
    {# width: 100%;
    position: relative;
    left: 0;
    right: .5rem;
    bottom: 0;
    top: 0; #}
}

.events-homepage h4
{
    font-family: Lato, sans-serif;
    font-size: 1.25rem;
    font-weight: bold;
    font-style: normal;
    font-stretch: normal;
    line-height: 1.2;
    letter-spacing: normal;
    text-align: left;
    color: #5b72b7;
    margin-bottom: 1rem;
}

.events-homepage .event-card-content > div
{
    font-family: Lato, sans-serif;
    font-size: 1rem;
    font-weight: bold;
    font-style: normal;
    font-stretch: normal;
    line-height: 1.13;
    letter-spacing: normal;
    text-align: left;
    color: #5b72b7;
    margin-bottom: .5rem;
}
.events-homepage .event-card-content > p
{
  font-family: Lato, sans-serif;
  font-size: 0.875rem;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: 1.23;
  letter-spacing: normal;
  text-align: left;
  color: #838896;
  margin-top: .5rem;
  margin-bottom: .5rem;

}

.events-homepage .details-button
{
    background-color: #5b72b7;
    font-size: .875rem;
    font-weight: normal;
    font-style: normal;
    font-stretch: normal;
    line-height: 1;
    letter-spacing: normal;
    text-align: left;
    color: #ffffff;
    border-radius: 1rem;
    padding: .25rem 1rem;
    text-decoration: none;
    margin-top: 1rem;
    display: inline-block;
}

</style>
{% endblock %}

{% block content %}

<section class="events-homepage">
    <div class="container">
        <header>
            <div class="header-title">
                <h2>{{page.title}}</h2>
            </div>

        {% if show_breadcrumbs and config.plugins.breadcrumbs.enabled %}
            {% include 'partials/breadcrumbs.html.twig' %}
        {% endif %}
        </header>
        
        {{ page.content|raw }}
        
        <h3>
            Upcoming Events
        </h3>

        <div class="upcoming-events">
        {% for event in page.children() %}
            <div class="card event-card mb-5">
            <div class="row d-flex justify-content-between">
                <div class="col-8">
                    <div class="event-card-content">
                        <h4>{{event.title}}</h4>
                        <div class="dates">{{event.header.date | date("F j, Y")}} - {{event.header.date_to | date("F j, Y")}}</div>
                        <div class="place">{{event.header.place}}</div>
                        <div class="website">{{event.header.website}}</div>
                        {{ event.summary | raw}}
                        {# {{event.header | json_encode()}} #}
                        <a class="details-button" href="{{url(event.url)}}">See Details</a>
                    </div>
                </div>

                <div class="col d-flex">
                <div class="event-card-image flex-fill" style="
                    background-image: url({{ url(event.media[event.header.image].url) }}); 
                    background-size: cover;
                    " >
                    &nbsp;
                    <img class="btn" src="{{ url(event.media[event.header.image].url) }}">
                </div>
                </div>
            </div>
            </div>
        {% endfor %}

        </div>


    </div>
</section>

{% endblock %}