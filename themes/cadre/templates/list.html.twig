{% extends 'partials/base.html.twig' %}
{% set show_breadcrumbs = header_var('show_breadcrumbs', [page, blog])|defined(true) %}

{% block content %}
<style>
    .default-page ul li p
    {
        margin-bottom: 0;
    }
    .default-page ul li
    {
        margin-bottom: 1rem;
    }

    .default-page
    {
        padding-top: 0;
    }
    .default-page header h2
    {
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;

        border-radius: 0 0 1rem 1rem;
        padding: 3rem;
        text-align: left;
        font-size: 2.5rem;
        margin: 0;
        color: white;

        background-image: url({{url('theme://assets/img/cadreEvent-Header-BgImg.jpg')}});
    }
</style>
<section class="default-page">
    <div class="container">
        {# <h2>{{page.title}}</h2>
        {% if show_breadcrumbs and config.plugins.breadcrumbs.enabled %}
            {% include 'partials/breadcrumbs.html.twig' %}
        {% endif %}        #}

        <header>
            <div class="header-title">
                <h2>{{page.title}}</h2>
            </div>

        {% if show_breadcrumbs and config.plugins.breadcrumbs.enabled %}
            {% include 'partials/breadcrumbs.html.twig' %}
        {% endif %}
        </header>
        
        <ul class="list-unstyled">
        {% for subpage in page.children() %}
            <li>
                <div class="card p-3">
                    <strong><a href="{{url(subpage.url)}}">{{ subpage.title|raw }}</a></strong>

                    {{ subpage.summary | raw }}
                    <small><a href="{{url(subpage.url)}}">Read More...</a></small>
                </div>
            </li>
        {% endfor %}
        </ul>
    </div>
</section>

{% endblock %}